{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    // These Python project tasks assume you have installed and configured: 
    // build, wheel, black, pylint, unittest, coverage, Sphinx, sphinx-rtd-theme
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Clean",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rfvd",
                "build",
                "dist",
                "htmlcov",
                "docs/_build",
                "${config:modulename}.egg-info",
            ],
            "windows": {
                "command": "Get-ChildItem",
                "args": [
                    "-Path",
                    "build\\,",
                    "dist\\,",
                    "htmlcov\\,",
                    "docs\\_build,",
                    "${config:modulename}.egg-info",
                    "-Recurse",
                    "|",
                    "Remove-Item",
                    "-Recurse",
                    "-Confirm:$false",
                    "-Force",
                ],
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Format",
            "type": "process",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "black",
                "src/${config:modulename}"
            ],
            "problemMatcher": []
        },
        {
            "label": "PylintError",
            "type": "process",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "pylint",
                "-E",
                "src/${config:modulename}"
            ],
            "problemMatcher": []
        },
        {
            "label": "Pylint",
            "type": "process",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "pylint",
                "--reports=y",
                "src/${config:modulename}"
            ],
            "problemMatcher": []
        },
        {
            "label": "Build",
            "type": "process",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "build",
                ".",
                "--wheel",
            ],
            "problemMatcher": []
        },
        {
            "label": "Test",
            "type": "process",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "unittest"
            ],
            "problemMatcher": []
        },
        {
            "label": "Coverage",
            "type": "shell",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "coverage",
                "run",
                "-m",
                "unittest",
                "&&",
                "coverage",
                "html",
            ],
            "problemMatcher": []
        },
        {
            "label": "Sphinx",
            "type": "process",
            "command": "sphinx-apidoc",
            "args": [
                "-f",
                "-o",
                "docs",
                "src/${config:modulename}"
            ],
            "problemMatcher": []
        },
        {
            "label": "Sphinx HTML",
            "type": "process",
            "command": "/usr/bin/make",
            "windows": {
                "command": "${workspaceFolder}/docs/make.bat"
            },
            "args": [
                "html"
            ],
            "options": {
                "cwd": "${workspaceFolder}/docs"
            },
            "dependsOrder": "sequence",
            "dependsOn": [
                "Sphinx"
            ],
            "problemMatcher": []
        },
        {
            "label": "Sphinx Deploy to S3",
            "type": "process",
            "command": "aws",
            "args": [
                "s3",
                "cp",
                "${workspaceFolder}/docs/_build/html",
                "s3://www.semuconsulting.com/${config:modulename}/"
            ],
            "dependsOrder": "sequence",
            "dependsOn": [
                "Sphinx HTML"
            ],
            "problemMatcher": []
        },
        {
            "label": "Install Locally",
            "type": "process",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "pip",
                "install",
                "${workspaceFolder}/dist/${config:distname}-${config:moduleversion}-py3-none-any.whl",
                "--user",
                "--force-reinstall"
            ],
            "dependsOrder": "sequence",
            "dependsOn": [
                "Clean",
                "Format",
                "PylintError",
                "Build",
                "Coverage",
                "Sphinx HTML"
            ],
            "problemMatcher": []
        },
        {
            "label": "Benchmark",
            "type": "process",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "${workspaceFolder}/examples/benchmark.py",
            ],
            "problemMatcher": []
        },
    ]
}